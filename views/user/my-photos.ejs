<div class="photos-upload-section">
      <% if(locals.error) { %>

      <div class="form-section text-input error">
            <p class="error message"><%= locals.error.message %></p>
      </div>

      <% } %>

      <form
            action="/users/me/photos?_csrf=<%= locals.csrf %>"
            method="post"
            enctype="multipart/form-data"
      >
            <div id="uploadBtn">
                  <label for="photos">
                        <p>
                              Choose up to 5 photos to upload
                              <br />
                              <small>Nb: less than 1MB size </small>
                        </p>
                        <span>
                              <img src="/upload.svg" alt="" />
                        </span>
                  </label>

                  <input
                        id="photos"
                        type="file"
                        name="photos"
                        accept="image/jpeg,image/png"
                        multiple
                        class="hidden"
                  />
            </div>

            <div>
                  <input type="submit" value="upload" class="btn" />
            </div>
      </form>
</div>

<div class="photos-upload-section">
      <h3>My photos</h3>

      <% if(photos.length){ %>

      <h4>(<%= photos.length + ' Item' %><%= photos.length-1 ? 's' : '' %>)</h4>

      <%- include('../partials/gallery.ejs') %>

      <br />

      <% } else { %>

      <p>no media yet</p>

      <% } %>
</div>
